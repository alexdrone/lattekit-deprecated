{
    "@stylesheet":{
        
        /* Here are defined different styles for the application .
         * You can easily inherit this styles by using the @style keyword 
         * in the layout section */
        "embossedButton":{
            "backgroundColor":"@color-gradient(7a2d1a, 802f1b, 34)",
            "cornerRadius":7,
            "borderWidth":2,
            "borderColor":"@color-hex:e25132",
            "font":"@font:Thonburi-Bold,16",
            "titleColor":"@color-hex:c7482b"
        },
        
        "defaultLabel":{
			"backgroundColor":"@color:clear",
			"textColor":"@color-hex:7a2d1a",
            "font":"@font:Thonburi-Bold,15"
        },
        
        "defaultCell":{
            "backgroundColor":"@color-gradient(c7482c, dd5031, 44)"
        },
        
        "redTableView":{
            "separatorColor":"@color:clear",
            "autoresizingMask":["width"]
        }
    }

}
/*
 * Latte Autolayout example
 * author: Alex Usbergo
 */

{
    /* The layout section describes the view hierarchy */
	"@layout":[
              
        //hello
		{"@isa":"UILabel", "@id":"l1", "backgroundColor": "@color-hex:00abb0", "text":"hello", "textColor":"@color:white", "translatesAutoresizingMaskIntoConstraints":false, "textAlignment":1, "cornerRadius":8},
              
        //world!
		{"@isa":"UILabel", "@id":"l2", "backgroundColor": "@color-hex:00CCF0", "text":"world", "textColor":"@color:white", "translatesAutoresizingMaskIntoConstraints":false, "textAlignment":1, "cornerRadius":8}
	],
    
    /* Want to be cutting edge?
     * Autolayout constraints can be sepecified in the @constraints secion */
	"@constraints":[
		{"format":"H:|-margin-[l1(140)]-margin-[l2(80)]","options":["baseline"],"metrics":{"margin":30}},
		{"format":"V:|-[l1(50)]"},
		{"format":"V:|-[l2(50)]"}
		
	]
}